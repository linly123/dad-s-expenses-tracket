<form action="/record/{{record._id}}?_method=PUT" method="POST" class="advise-container">
  <div class=" advise-header">
    <h6>*必須填欄位</h6>
    <h4>請修改你的支出</h4>
  </div>
  <div>
    <label for="name">名稱*：</label>
    <input type="text" name="name" value="{{record.name}}"><br>
  </div>
  <div>
    <label for="date">日期*：</label>
    <input type="date" id="start" name="date" min="2020-07-01" max="2020-12-31" value="{{record.date}}"><br>
  </div>
  <div>
    <label for=" category">類別*：</label>
    <select name="category">
      {{#each categories}}
      {{#if (isEqual this ../record.category)}}
      <option value="{{this}}" selected>{{this}}</option>
      {{else}}
      <option value="{{this}}">{{this}}</option>
      {{/if}}
      {{/each}}
    </select>
  </div>
  <div>
    <label for="amount">金額*：</label>
    <input type="text" name="amount" value="{{record.amount}}"><br>

  </div>
  <div><button type="submit" class="btn advise-btn">送出</button></div>
</form>